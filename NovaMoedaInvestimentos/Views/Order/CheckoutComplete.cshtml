@model Order

<div class="container">

    <div class="jumbotron">
        <br />
        <h2>@ViewBag.CheckoutCompleteMessage</h2>
        <br />
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Name @Model.LastName</strong>
            <p>Data do Pedido:  <strong>@Model.Timestamp</strong>
            <p>Número do Pedido: <strong>@Model.OrderId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Ação</th>
                    <th>Preço</th>
                </tr>
                        @foreach (var item in Model.OrderItems)
                        {
                    <tr>
                        <td><img src="@item.Stock.Image" width="40"  /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Stock.Name</td>
                        <td>@item.Stock.CurrentPrice</td>
                    </tr>
                        }
            </table>

            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.AmountOrder).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-success" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>